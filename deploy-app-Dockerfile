
FROM node:10

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
COPY package*.json ./
RUN npm install

# Bundle app source
COPY .babelrc ./
COPY src src/

EXPOSE 8080

ENV PRODUCT_GALLERY_DB_URL=""
RUN export PRODUCT_GALLERY_DB_URL=${PRODUCT_GALLERY_DB_URL}
CMD [ "npm", "start" ] 